   from flrerrhandler.



/*********************************************************************
  fllibcollectset(+Var,+GrpByLst,[],+Goal,-Set)
*********************************************************************/
FLLIBCOLLECTSET(Var,[],[],Goal,Set) :-
	!,
	findall(Var,Goal,Bag),
	sort(Bag,Set_pre),
        (setof_option(strict) -> squash_variants(Set_pre,Set)
        ; Set = Set_pre
        ).

