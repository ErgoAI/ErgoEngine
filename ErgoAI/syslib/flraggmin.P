/*********************************************************************
  fllibmin(+Var,+GrpByLst,[],+Goal,-Min)
*********************************************************************/
FLLIBMIN(Var,[],[],Goal,Min) :-
	!,
	findall(Var,Goal,Matches),
	Matches=[H|L],
	flora_minaux(L,H,Min).

