/*********************************************************************
  fllibcount(+Var,+GrpByLst,[],+Goal,-Count)
*********************************************************************/
FLLIBCOUNT(Var,[],[],Goal,Count) :-
	!,
	findall(Var,Goal,Matches),
	length(Matches,Count).

