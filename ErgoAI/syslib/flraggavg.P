/*********************************************************************
  fllibavg(+Var,+GrpByLst,[],+Goal,-Avg)
*********************************************************************/
FLLIBAVG(Var,[],[],Goal,Avg) :-
	!,
	findall(Var,Goal,Matches),
	flora_avgaux(Matches,Avg).

