/*  File extensions used in FLORA-2 */

#define FLORA_INCLUDE_EXT	 fli
#define FLORA_HEADER_EXT	 flh
#define FLORA_FDB_EXT		 fdb

/* Extension for storage of defined predicate skeletons */
#define FLORA_FLD_EXT		 fld

/* Extension for storing meta-predicates */
#define FLORA_FLM_EXT		 flm

/* Extension for storing textual info on source file - loaded on-demand */
#define FLORA_FTX_EXT		 ftx
/* Extension for storing #include dependencies */
