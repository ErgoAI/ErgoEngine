   for user defined functions */
#define FLORA_FLT_EXT		 flt

#define FLORA_HIDDEN_PROLOG_EXT  pl

#define FLORA_FOR_ADD_SUFFIX_SANS_DOT     '#for_add'
#define FLORA_FOR_ADD_SUFFIX              '#for_add.'
#define FLORA_FOR_ADD_ENCODING_SUFFIX     '#for_add_'

#define FLORA_FILE_EXT_ALT        [ergo,flr]
#define FLORA_FILE_EXT		 ergo

#define FLORA_FILE_PREFERRED_EXT  ergo

/* ErgoText extension   */
#define ERGO_NLTEMPLATE_EXT       ergotxt

/* Ergo Structural DB extension   */
#define ERGO_FSTRDB_EXT           fstrdb


